{
  "name": "react-use-confirmation",
  "version": "0.0.1",
  "description": "Await confirmation dialogs",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "lint": "eslint src test stories --ext .ts,.tsx,.js,.jsx --cache --max-warnings 0",
    "cleanup": "npx rimraf dist storybook-static",
    "release": "standard-version",
    "prettier": "prettier --write '{src,test,stories}/**/*.{js,jsx,ts,tsx}'"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "keywords": [
    "confirm",
    "confirmation",
    "modal",
    "dialog",
    "react"
  ],
  "author": "Michal Obrocnik <roomy_western_0x@icloud.com>",
  "homepage": "https://mbixby.github.io/react-use-confirmation/",
  "repository": {
    "url": "https://github.com/mbixby/react-use-confirmation"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.17.7",
    "@babel/preset-typescript": "^7.16.7",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.40",
    "@types/shallowequal": "^1.1.1",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "babel-loader": "^8.2.3",
    "classnames": "^2.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-babel": "^5.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.5.1",
    "react-docgen-typescript": "^2.2.2",
    "rollup": "^3.17.2",
    "rollup-plugin-dts": "^5.2.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "shallowequal": "^1.1.0",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "react": "^16.14.0 || ^17.0.2 || ^18.0.0",
    "react-dom": "^16.14.0 || ^17.0.2 || ^18.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "root": true,
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ]
  }
}
